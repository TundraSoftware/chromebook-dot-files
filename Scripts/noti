#
#!/bin/sh
# Info sul sistema in stile notifica
# Gaudiero Tindaro Vincenzo - https://tundrasoftware.it
#

case "$1" in

  -a)
      pkill herbe & \
      herbe "$(date +'%I:%M %P')" " "\
       		"$(date +'%a, %d %b')" " "\
            "$(set -- $(sensors | grep -i core); printf '%s\n' "CPU:$4")" " "\
            "Batteria: $(cat /sys/class/power_supply/BAT0/capacity)%" " "\
			"Schermo: $(light)%" ;;
 -b)
  pkill herbe
      herbe	"Schermo: $(light)%" ;;
 
esac
